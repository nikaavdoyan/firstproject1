{% extends "base.html.twig" %}

{% block body %}
<div class ="container mt-4">
{% if not ingredients.items is same as ([]) %}
<h1>Mes ingredients</h1>
<a href="{{path('app_ingredient_new')}}" class="btn btn-primary mt-4">Ajouter un ingrédient</a>
{% for message in app.flashes('success')  %}
<div class="alert-success">
{{message}}
</div> 
{% endfor %}
<table class="table table-hover">
  <thead>
    <tr>
      <th scope="col">Numéro</th>
      <th scope="col">Nom</th>
      <th scope="col">Prix</th>
      <th scope="col">Date de création</th>
      <th scope="col">Modification</th>
      <th scope="col">Suppression</th>
    </tr>
  </thead>
  <tbody>
    {% for ingredient  in ingredients %}
<tr class="table-primary">
    <td scope="row">{{ingredient.id }}</td>
    <td>{{ingredient.name }}</td>
    <td>{{ingredient.price }}</td>
    <td>{{ingredient.createdAT|date('d/m/Y') }}</td>
    <td>
        <a href="{{path('app_ingredient_edit',{id: ingredient.id}) }}" class="btn btn-info ">Modifier</a>

    </td>
    <td>
            <a href="{{path('app_ingredient_edit',{id: ingredient.id}) }}" class="btn btn-info ">Supprimer</a>

    </td>
</tr>
  
{% endfor %}
  </tbody>
</table>
<div class="navigation d-flex justify-content-center">
    {{ knp_pagination_render(ingredients) }}
</div>
{# total items count #}
<div class="count">
{% else %}
  
   <h4>Il y a {{ ingredients.getTotalItemCount }}ingredients</h4>
</div>
{% endif %}
 </div>
{% endblock %}